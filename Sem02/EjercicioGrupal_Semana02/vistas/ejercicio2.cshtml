@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ejercicio 2</title>

    <!-- Bootswatch United Theme -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/united/bootstrap.min.css">
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .form-container {
            max-width: 800px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-primary mb-3" data-bs-theme="dark">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse flex-content-center" id="navbarColor01">
                <ul class="navbar-nav mx-auto text-center">
                    <li class="nav-item">
                        <a class="nav-link" href="~/vistas/index.cshtml">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="~/vistas/ejercicio1.cshtml">
                            Ejercicio 1
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/vistas/ejercicio2.cshtml">Ejercicio 2</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2 class="text-center mb-4">Ejercicio 2</h2>

        <div class="form-container">
            <form action="Procesa.cshtml" method="get">
                <fieldset style="border: 2px solid #f29879 !important;" class="border border-primary p-4">
                    <legend style="padding: 1px 10px !important; float: none; width: auto;">Notas del Estudiante</legend>

                    <div class="mb-4">
                        <label for="nombre" class="form-label">Nombre completo:</label>
                        <input name="nombre" required type="text" class="form-control form-control-lg" id="nombre" placeholder="Ingrese su nombre completo">
                    </div>

                    <div class="row">
                        <!-- Materia 1 -->
                        <div class="col-md-6 mb-4">
                            <h5 class="mb-3">
                                <i class="fas fa-book me-2"></i>Materia 1
                            </h5>
                            <div class="mb-3">
                                <label for="nota1Materia1" class="form-label">Nota 1:</label>
                                <input name="nota1Materia1" required type="number" class="form-control" id="nota1Materia1" min="0" max="10" step="0.01">
                            </div>
                            <div class="mb-3">
                                <label for="nota2Materia1" class="form-label">Nota 2:</label>
                                <input name="nota2Materia1" required type="number" class="form-control" id="nota2Materia1" min="0" max="10" step="0.01">
                            </div>
                        </div>

                        <!-- Materia 2 -->
                        <div class="col-md-6 mb-4">
                            <h5 class="mb-3">
                                <i class="fas fa-book me-2"></i>Materia 2
                            </h5>
                            <div class="mb-3">
                                <label for="nota1Materia2" class="form-label">Nota 1:</label>
                                <input name="nota1Materia2" required type="number" class="form-control" id="nota1Materia2" min="0" max="10" step="0.01">
                            </div>
                            <div class="mb-3">
                                <label for="nota2Materia2" class="form-label">Nota 2:</label>
                                <input name="nota2Materia2" required type="number" class="form-control" id="nota2Materia2" min="0" max="10" step="0.01">
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-lg btn-success" type="submit">
                            <i class="fas fa-paper-plane me-2"></i> Enviar
                        </button>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

